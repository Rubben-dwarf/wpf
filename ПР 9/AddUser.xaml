<Window x:Class="ПР_9.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПР_9"
        mc:Ignorable="d"
        Title="Добавить пользователя" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <Label Content="Имя" Width="50" Margin="5" />
        <TextBox x:Name="FirstNameBox" Width="150" Height="20"/>
        <Label Content="Роль" Width="50" Margin="5"/>
        <ComboBox x:Name="RolesBox" Width="150" Height="20" DisplayMemberPath="RoleName"/>
        <Label Content="Страна" Width="50" Margin="5"/>
        <ComboBox x:Name="CountryBox" Width="150" Height="20" DisplayMemberPath="CountryName"/>
        <Label Content="Пол" Width="50" Margin="5"/>
        <ComboBox x:Name="GenderBox" Width="150" Height="20" DisplayMemberPath="Gender1"/>
        <Button x:Name="DoneButton" Margin="20" Content="Добавить" Width="100" Height="30" Click="DoneButton_Click" />
    </StackPanel>
</Window>
